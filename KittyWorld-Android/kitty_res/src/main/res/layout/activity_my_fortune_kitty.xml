<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="ResourceName">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_5D75FF"
            android:paddingBottom="@dimen/dp_86">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="ResourceName">

                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingStart="@dimen/dp_15"
                    android:paddingTop="@dimen/dp_35"
                    android:paddingEnd="@dimen/dp_15"
                    android:paddingBottom="@dimen/dp_10"
                    android:src="@drawable/icon_left_white" />

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:paddingTop="@dimen/dp_35"
                    android:paddingBottom="@dimen/dp_10"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_17"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:paddingStart="@dimen/dp_15"
                    android:paddingTop="@dimen/dp_35"
                    android:paddingEnd="@dimen/dp_15"
                    android:paddingBottom="@dimen/dp_10"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_14" />

            </RelativeLayout>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="85dp"
                android:text="@string/up_to_activity"
                android:textColor="@color/dark"
                android:textSize="@dimen/sp_18"
                android:textStyle="bold" />

            <RelativeLayout
                android:id="@+id/rl_invite_friends"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@drawable/my_fortune_back"
                android:paddingLeft="@dimen/dp_10"
                android:paddingTop="@dimen/dp_14"
                android:paddingRight="@dimen/dp_20"
                android:paddingBottom="@dimen/dp_14">

                <ImageView
                    android:id="@+id/iv_my_invite_icon"
                    android:layout_width="54dp"
                    android:layout_height="54dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/invite_friends_icon" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/sp_15"
                    android:layout_toRightOf="@+id/iv_my_invite_icon"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/invite_friend"
                        android:textColor="@color/dark"
                        android:textSize="@dimen/sp_18"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="@string/invite_friend_get_activity"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/sp_14" />

                </LinearLayout>

                <ImageView
                    android:layout_width="8dp"
                    android:layout_height="14dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/little_arror_gray" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/fl_up_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@drawable/my_fortune_back"
                android:paddingLeft="@dimen/dp_10"
                android:paddingTop="@dimen/dp_14"
                android:paddingRight="@dimen/dp_20"
                android:paddingBottom="@dimen/dp_14">

                <ImageView
                    android:id="@+id/iv_up_activity"
                    android:layout_width="54dp"
                    android:layout_height="54dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/up_activiy" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/sp_15"
                    android:layout_toRightOf="@+id/iv_up_activity"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/up_activity"
                        android:textColor="@color/dark"
                        android:textSize="@dimen/sp_18"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="@string/up_acivity_tip"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/sp_14" />

                </LinearLayout>

                <ImageView
                    android:layout_width="8dp"
                    android:layout_height="14dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/little_arror_gray" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/fl_unlock_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@drawable/my_fortune_back"
                android:paddingLeft="@dimen/dp_10"
                android:paddingTop="@dimen/dp_14"
                android:paddingRight="@dimen/dp_20"
                android:paddingBottom="@dimen/dp_14">

                <ImageView
                    android:id="@+id/iv_unlock_city"
                    android:layout_width="54dp"
                    android:layout_height="54dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/unlock_city" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/sp_15"
                    android:layout_toRightOf="@+id/iv_unlock_city"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/unlock_city"
                        android:textColor="@color/dark"
                        android:textSize="@dimen/sp_18"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="@string/unlock_city_tips"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/sp_14" />

                </LinearLayout>

                <ImageView
                    android:layout_width="8dp"
                    android:layout_height="14dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/little_arror_gray" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_top_borad"
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_90"
        android:layout_marginRight="@dimen/dp_15"
        android:background="@color/transparent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_marginTop="@dimen/dp_15"
            android:background="@drawable/white_shadow"
            android:layout_alignParentBottom="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="126dp"
                android:layout_marginTop="@dimen/dp_24"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_my_kitty_tip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableRight="@drawable/profit_check_icon"
                        android:drawablePadding="@dimen/dp_8"
                        android:text="@string/my_fortune_kitty"
                        android:textColor="@color/dark"
                        android:textSize="@dimen/sp_18"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_30"
                        android:layout_weight="1"
                        android:gravity="right">


                        <TextView
                            android:id="@+id/tv_progress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.00%"
                            android:textColor="@color/red"
                            android:textSize="@dimen/sp_18"
                            android:textStyle="bold" />

                    </LinearLayout>
                </LinearLayout>

                <ProgressBar
                    android:id="@+id/pb_fortune_pb"
                    style="@style/update_progress_horizontal_friend"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_8"
                    android:layout_marginTop="@dimen/dp_14"
                    android:layout_marginRight="@dimen/dp_30"
                    android:max="100" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_fortune"
            android:layout_width="112dp"
            android:layout_height="110dp"
            android:layout_marginBottom="@dimen/dp_12"
            android:src="@drawable/fortune_kitty_icon" />

    </RelativeLayout>
</RelativeLayout>
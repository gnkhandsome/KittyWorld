<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_15"
    android:background="@drawable/invite_friend_back"
    android:paddingLeft="@dimen/dp_10"
    android:paddingTop="@dimen/dp_17"
    android:paddingBottom="@dimen/dp_17"
    tools:ignore="ResourceName">

    <ImageView
        android:id="@+id/iv_level_task_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/task_invite_icon" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/dp_14"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_invite_task_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/invite_friend_text"
            android:textColor="@color/dark"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_invite_task_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:text="@string/ever_login_desc"
            android:textColor="@color/gray"
            android:textSize="@dimen/sp_12" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="right">

        <TextView
            android:id="@+id/tv_receive_invite"
            android:layout_width="72dp"
            android:layout_height="@dimen/dp_32"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/dp_16"
            android:background="@drawable/invite_friend_receive_back"
            android:text="@string/receive"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold" />

    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:ignore="ResourceName">

    <TextView
        android:id="@+id/tv_message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/message_center_time_back"
        android:gravity="center"
        android:paddingStart="@dimen/dp_15"
        android:paddingTop="@dimen/dp_4"
        android:paddingEnd="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_4"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_10" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:background="@drawable/travel_content_board"
        android:orientation="vertical">
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical">

        <TextView
            android:id="@+id/message_op_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_15"
            android:gravity="center_vertical"
            android:textColor="@color/dark"
            android:textSize="@dimen/sp_17"
            android:textStyle="bold" />

    <ImageView
        android:id="@+id/iv_read_status"
        android:layout_width="@dimen/dp_8"
        android:layout_gravity="right|center_vertical"
        android:layout_height="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_15"
        android:src="@drawable/unread_point_shape"/>
</FrameLayout>

        <TextView
            android:id="@+id/message_op_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/sp_14" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_marginTop="@dimen/dp_14"
            android:background="@color/color_DCDCDC"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15" />

        <TextView
            android:id="@+id/tv_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/little_arror_gray"
            android:drawablePadding="@dimen/dp_3"
            android:ellipsize="end"
            android:maxLines="2"
            android:padding="@dimen/dp_15"
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/sp_14" />

    </LinearLayout>

        <ImageView
            android:id="@+id/iv_receive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"
            android:src="@drawable/receive_icon"/>
    </RelativeLayout>
</LinearLayout>
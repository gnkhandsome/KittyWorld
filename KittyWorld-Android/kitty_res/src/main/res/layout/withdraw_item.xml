<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:ignore="ResourceName">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/ll_withdraw_item"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/with_draw_amount_selected"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_withdraw_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_20"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_cny_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cny_unit"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_first_withdraw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="@drawable/first_with_draw_back"
            android:paddingLeft="@dimen/dp_4"
            android:paddingTop="@dimen/dp_1"
            android:paddingRight="@dimen/dp_4"
            android:paddingBottom="@dimen/dp_1"
            android:text="@string/first"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_10" />
    </FrameLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    tools:ignore="ResourceName">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/activity_dialog_back"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_13"
            android:layout_marginTop="@dimen/dp_40">

            <ImageView
                android:id="@+id/iv_kitty_icon"
                android:layout_width="110dp"
                android:layout_height="73dp" />

            <TextView
                android:id="@+id/tv_kitty_level"
                android:layout_width="@dimen/dp_40"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:background="@drawable/level_back"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_13"
                android:textStyle="bold" />
        </FrameLayout>


        <TextView
            android:id="@+id/tv_kitty_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_25"
            android:gravity="center_horizontal"
            android:textColor="@color/dark"
            android:textSize="@dimen/sp_17"
            android:textStyle="bold" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:gravity="center_horizontal"
            android:text="@string/update_success"
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/sp_14"
            tools:ignore="SpUsage" />


        <TextView
            android:id="@+id/iv_confirm"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/dp_47"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_47"
            android:layout_marginBottom="@dimen/dp_33"
            android:background="@drawable/activity_repertory_draw"
            android:gravity="center"
            android:text="@string/confirm"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_17"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/activity_dialog_back"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:orientation="horizontal"
            android:layout_gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="距离合成招财猫还差"
            android:textColor="#ff666666"
            android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_stage_limit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="37"
                android:textColor="@color/red"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="级"
                android:textColor="#ff666666"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_9"
            android:layout_marginBottom="@dimen/dp_16"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:src="@drawable/fortune_kitty_tiny_icon" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:background="@drawable/shape_bonus_now_back"
                android:orientation="vertical"
                android:paddingStart="@dimen/dp_18"
                android:paddingTop="@dimen/dp_5"
                android:paddingEnd="@dimen/dp_18"
                android:paddingBottom="@dimen/dp_5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="center_horizontal"
                    android:text="@string/home_bonus_tips"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/today_bonus_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_14"
                    android:text="￥0.00"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>



</LinearLayout>
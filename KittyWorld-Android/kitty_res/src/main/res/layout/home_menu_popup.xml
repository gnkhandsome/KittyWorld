<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="ResourceName">

    <LinearLayout
        android:id="@+id/ll_plays"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/home_play_back"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_13"
        android:paddingTop="@dimen/dp_6"
        android:paddingRight="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_6">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_veris"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/veris_icon" />

            <ImageView
                android:id="@+id/iv_veris_red_point"
                android:layout_width="@dimen/dp_8"
                android:layout_height="@dimen/dp_8"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/dp_3"
                android:src="@drawable/unread_point_shape"
                android:visibility="invisible" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iv_red_pack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_6"
                android:src="@drawable/red_pack_icon" />

            <ImageView
                android:id="@+id/iv_red_pack_red_point"
                android:layout_width="@dimen/dp_8"
                android:layout_height="@dimen/dp_8"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/dp_3"
                android:src="@drawable/unread_point_shape"
                android:visibility="gone" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_home_adventure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_6"
                android:layout_marginRight="@dimen/dp_5"
                android:src="@drawable/home_adventure_icon" />

            <ImageView
                android:id="@+id/iv_home_adventure_red_point"
                android:layout_width="@dimen/dp_8"
                android:layout_height="@dimen/dp_8"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/dp_3"
                android:src="@drawable/unread_point_shape"
                android:visibility="invisible" />
        </FrameLayout>
    </LinearLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    tools:ignore="ResourceName">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/activity_dialog_back"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/close_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:padding="@dimen/dp_20"
            android:src="@drawable/gray_close_icon" />

        <ImageView
            android:layout_width="@dimen/dp_107"
            android:layout_height="@dimen/dp_99"
            android:src="@drawable/ten_box_coin_icon" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_22"
                android:gravity="center_horizontal"
                android:text="@string/goog_to_gain"
                android:textColor="@color/dark"
                android:textSize="@dimen/sp_17"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_reward_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_22"
                android:gravity="center_horizontal"
                android:textColor="@color/red"
                android:textSize="@dimen/sp_17"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_bonus_box_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:gravity="center_horizontal"
            android:text="@string/treasure_box_ten_tip"
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/sp_14"
            tools:ignore="SpUsage" />


        <LinearLayout
            android:id="@+id/ll_watch_vidio_get"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:layout_marginStart="@dimen/dp_47"
            android:layout_marginTop="@dimen/dp_24"
            android:layout_marginEnd="@dimen/dp_47"
            android:background="@drawable/activity_repertory_draw"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/vedio_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_5"
                android:text="@string/watch_vidio_get"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_17"
                android:textStyle="bold"
                tools:ignore="SpUsage" />


        </LinearLayout>

        <TextView
            android:id="@+id/tv_remain_wheel_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_12"
            android:gravity="center_horizontal"
            android:paddingBottom="@dimen/dp_46"
            android:text="@string/treasure_vidio_tips"
            android:textColor="@color/color_999990"
            android:textSize="@dimen/sp_12"
            tools:ignore="SpUsage" />

    </LinearLayout>

</LinearLayout>
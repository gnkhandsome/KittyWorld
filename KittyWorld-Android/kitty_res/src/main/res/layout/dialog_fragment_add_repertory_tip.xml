<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    tools:ignore="ResourceName">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/activity_dialog_back"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:src="@drawable/white_close_icon" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_2"
            android:gravity="center_horizontal"
            android:text="@string/is_add_to_repertory_tip"
            android:textColor="@color/dark"
            android:textSize="@dimen/sp_17"
            android:textStyle="bold" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/tv_add_to_repertory_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_add_to_repertory_level"
                android:layout_width="@dimen/dp_22"
                android:layout_height="wrap_content"
                android:layout_gravity="right|bottom"
                android:background="@drawable/level_back"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_13" />

        </FrameLayout>

        <TextView
            android:id="@+id/tv_add_to_repertory_confirm"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:layout_marginStart="@dimen/dp_25"
            android:layout_marginTop="@dimen/dp_28"
            android:layout_marginEnd="@dimen/dp_25"
            android:background="@drawable/activity_repertory_draw"
            android:gravity="center"
            android:text="@string/confirm"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_17"
            tools:ignore="SpUsage" />

    </LinearLayout>

</LinearLayout>
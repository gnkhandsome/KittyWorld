<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    tools:ignore="ResourceName">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/activity_dialog_back"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp_30">

        <ImageView
            android:id="@+id/close_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:paddingLeft="@dimen/dp_20"
            android:paddingTop="@dimen/dp_20"
            android:paddingRight="@dimen/dp_20"
            android:src="@drawable/gray_close_icon" />

        <ImageView
            android:layout_width="@dimen/dp_74"
            android:layout_height="@dimen/dp_67"
            android:src="@drawable/hour_bonus_icon" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_22"
                android:gravity="center_horizontal"
                android:text="@string/give"
                android:textColor="@color/dark"
                android:textSize="@dimen/sp_17"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_22"
                android:gravity="center_horizontal"
                android:text="@string/red_pack"
                android:textColor="@color/red"
                android:textSize="@dimen/sp_17"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_12"
            android:gravity="center_horizontal"
            android:text="@string/get_red_pack_together"
            android:textColor="@color/color_999990"
            android:textSize="@dimen/sp_12"
            tools:ignore="SpUsage" />

        <TextView
            android:id="@+id/tv_share_red_pack"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:layout_marginStart="@dimen/dp_47"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginEnd="@dimen/dp_47"
            android:layout_marginBottom="@dimen/dp_45"
            android:background="@drawable/activity_repertory_draw"
            android:gravity="center"
            android:text="@string/share_get_red_pack"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_17"
            android:textStyle="bold"
            tools:ignore="SpUsage" />

    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    tools:ignore="ResourceName">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/update_top_back">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dp_60"
        android:layout_marginLeft="@dimen/dp_20">

        <TextView
            android:id="@+id/tv_version_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/white"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_8"
            android:paddingRight="@dimen/dp_8"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"
            android:text="V1.0.0"
            android:background="@drawable/update_version_back"/>

    <TextView
        android:id="@+id/tv_update_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_20"
        android:layout_marginTop="@dimen/dp_10"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:text="@string/update_version"/>
    </LinearLayout>
</RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/update_bottom_back"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:text="@string/app_version"
            android:textColor="@color/dark"
            android:textSize="@dimen/sp_14"
            android:layout_marginLeft="@dimen/dp_20"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_update_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_12"
            android:textColor="@color/dark_gray"
            android:layout_marginLeft="@dimen/dp_20"
            android:textSize="@dimen/sp_12"
            tools:ignore="SpUsage" />

        <TextView
        android:id="@+id/tv_update"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_marginStart="@dimen/dp_47"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_47"
        android:background="@drawable/activity_repertory_draw"
        android:gravity="center"
        android:text="@string/to_download"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_17"
        android:textStyle="bold"
        tools:ignore="SpUsage" />

        <TextView
            android:id="@+id/tv_not_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/not_upgrade_text"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp_12"
            android:textColor="@color/color_9B9B9B"
            android:layout_marginBottom="@dimen/dp_27"
            android:textSize="@dimen/sp_14"
            tools:ignore="SpUsage" />

    </LinearLayout>

</LinearLayout>
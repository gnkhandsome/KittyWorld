<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_home_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="ResourceName">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="ResourceName">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <LinearLayout
                        android:id="@+id/ll_city"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/home_map_china_back"
                        android:orientation="horizontal" />

                    <LinearLayout
                        android:id="@+id/ll_city_build"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|bottom"
                        android:layout_marginRight="-130dp"
                        android:layout_marginBottom="-1dp"
                        android:background="@drawable/home_map_china_build"
                        android:orientation="horizontal"
                        android:paddingLeft="-100dp" />

                </FrameLayout>

                <HorizontalScrollView
                    android:id="@+id/sv_ground"
                    android:layout_width="1300dp"
                    android:layout_height="81dp"
                    android:layout_marginBottom="@dimen/dp_20">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/ll_ground_one"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@drawable/home_map_china_g"
                            android:orientation="horizontal" />

                        <LinearLayout
                            android:id="@+id/ll_ground_two"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@drawable/home_map_china_g"
                            android:orientation="horizontal" />

                        <LinearLayout
                            android:id="@+id/ll_ground_three"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@drawable/home_map_china_g"
                            android:orientation="horizontal" />

                    </LinearLayout>

                </HorizontalScrollView>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_top_back"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/ll_current_location"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_49"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingStart="@dimen/dp_15">

                        <TextView
                            android:id="@+id/tv_loaction"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="北京"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_32"
                            android:textStyle="bold"
                            android:maxLines="1"
                            android:visibility="invisible"
                            tools:ignore="SpUsage" />

                        <ImageView
                            android:id="@+id/iv_loaction"
                            android:layout_width="@dimen/dp_10"
                            android:layout_height="@dimen/dp_18"
                            android:layout_marginStart="@dimen/dp_10"
                            android:src="@drawable/main_to_location_icon"
                            android:visibility="invisible" />

                        <ImageView
                            android:id="@+id/iv_map_red_point"
                            android:layout_width="@dimen/dp_8"
                            android:layout_height="@dimen/dp_8"
                            android:layout_gravity="right"
                            android:layout_marginRight="@dimen/dp_3"
                            android:src="@drawable/unread_point_shape"
                            android:visibility="invisible" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="@dimen/dp_10"
                            android:gravity="center_vertical|right">

                            <FrameLayout
                                android:id="@+id/fl_get_bonus"
                                android:layout_width="@dimen/dp_42"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_horizontal">

                                <ImageView
                                    android:id="@+id/iv_bonus"
                                    android:layout_width="@dimen/dp_42"
                                    android:layout_height="@dimen/dp_42"
                                    android:layout_gravity="center_horizontal"
                                    android:src="@drawable/main_get_bonus" />

                                <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <TextView
                                        android:id="@+id/tv_get_bonus"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="bottom"
                                        android:layout_marginStart="@dimen/dp_3"
                                        android:layout_marginEnd="@dimen/dp_3"
                                        android:background="@drawable/shape_home_get_bonus"
                                        android:gravity="center"
                                        android:text="@string/home_get_bonus"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/sp_10"
                                        android:textStyle="bold"
                                        android:visibility="invisible" />

                                    <TextView
                                        android:id="@+id/tv_bouns_unlock"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="bottom|center_horizontal"
                                        android:gravity="center"
                                        android:textColor="@color/color_a2a2a2"
                                        android:textSize="10sp"
                                        android:visibility="invisible" />
                                </FrameLayout>


                                <ImageView
                                    android:id="@+id/iv_bonus_red_point"
                                    android:layout_width="@dimen/dp_8"
                                    android:layout_height="@dimen/dp_8"
                                    android:layout_gravity="right"
                                    android:layout_marginRight="@dimen/dp_3"
                                    android:src="@drawable/unread_point_shape"
                                    android:visibility="invisible" />
                            </FrameLayout>

                            <FrameLayout
                                android:id="@+id/fl_lucky_rotate"
                                android:layout_width="@dimen/dp_42"
                                android:layout_height="match_parent"
                                android:layout_marginStart="@dimen/dp_10">

                                <ImageView
                                    android:id="@+id/iv_luck_wheel"
                                    android:layout_width="@dimen/dp_42"
                                    android:layout_height="@dimen/dp_42"
                                    android:layout_gravity="center_horizontal"
                                    android:src="@drawable/main_lucky_icon" />

                                <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="bottom|center_horizontal">

                                    <ImageView
                                        android:id="@+id/iv_luck_wheel_text"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/luck_text_icon"
                                        android:visibility="invisible" />

                                    <TextView
                                        android:id="@+id/tv_luck_wheel_unlock"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="bottom|center_horizontal"
                                        android:gravity="center"
                                        android:textColor="@color/color_a2a2a2"
                                        android:textSize="10sp"
                                        android:visibility="invisible" />

                                </FrameLayout>

                                <ImageView
                                    android:id="@+id/iv_luck_red_point"
                                    android:layout_width="@dimen/dp_8"
                                    android:layout_height="@dimen/dp_8"
                                    android:layout_gravity="right"
                                    android:layout_marginRight="@dimen/dp_3"
                                    android:src="@drawable/unread_point_shape"
                                    android:visibility="invisible" />

                            </FrameLayout>


                            <FrameLayout
                                android:id="@+id/fl_check_guid"
                                android:layout_width="@dimen/dp_42"
                                android:layout_height="match_parent"
                                android:visibility="gone"
                                android:layout_marginStart="@dimen/dp_10">

                                <ImageView
                                    android:layout_width="@dimen/dp_42"
                                    android:layout_height="@dimen/dp_42"
                                    android:layout_gravity="center_horizontal"
                                    android:src="@drawable/main_guid_icon" />

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="bottom|center_horizontal"
                                    android:src="@drawable/how_paly_text" />

                            </FrameLayout>

                            <FrameLayout
                                android:id="@+id/fl_check_level"
                                android:layout_width="@dimen/dp_42"
                                android:layout_height="match_parent"
                                android:layout_marginStart="@dimen/dp_10">

                                <ImageView
                                    android:layout_width="@dimen/dp_42"
                                    android:layout_height="@dimen/dp_42"
                                    android:layout_gravity="center_horizontal"
                                    android:src="@drawable/main_level_icon" />

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="bottom|center_horizontal"
                                    android:src="@drawable/level_text_icon" />
                            </FrameLayout>

                        </LinearLayout>
                    </LinearLayout>

                    <ProgressBar
                        android:id="@+id/pb_location"
                        style="@style/update_progress_horizontal"
                        android:layout_width="@dimen/dp_95"
                        android:layout_height="@dimen/dp_5"
                        android:layout_marginTop="@dimen/dp_3"
                        android:max="100"
                        android:paddingStart="@dimen/dp_15"
                        android:visibility="invisible" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/home_fortune_margin"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:id="@+id/ll_marquee_view"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/dp_2"
                            android:layout_marginBottom="@dimen/dp_2"
                            android:layout_weight="1"
                            android:background="@drawable/publish_back"
                            android:visibility="invisible">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/dp_11"
                                android:src="@drawable/laba" />

                            <!--                            <com.dalong.marqueeview.MarqueeView-->
                            <!--                                android:id="@+id/tv_banner"-->
                            <!--                                android:layout_width="match_parent"-->
                            <!--                                android:layout_height="match_parent"-->
                            <!--                                android:layout_marginLeft="@dimen/dp_11"-->
                            <!--                                android:layout_marginRight="@dimen/dp_10"-->
                            <!--                                android:gravity="center_vertical"-->
                            <!--                                app:direction="left"-->
                            <!--                                app:isRepeat="true"-->
                            <!--                                app:speed="50"-->
                            <!--                                app:startPoint="end"-->
                            <!--                                app:textSize="12sp"-->
                            <!--                                app:textcolor="@color/white" />-->

                            <com.kitty.kitty_base.utils.MarqueeTextView
                                android:id="@+id/tv_banner"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/dp_11"
                                android:layout_marginRight="@dimen/dp_10"
                                android:gravity="center_vertical"
                                android:textColor="@color/white"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_fortune_profit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_35"
                            android:layout_marginRight="@dimen/dp_10"
                            android:background="@drawable/shape_bonus_now_back"
                            android:orientation="vertical"
                            android:paddingStart="@dimen/dp_14"
                            android:paddingTop="@dimen/dp_3"
                            android:paddingEnd="@dimen/dp_10"
                            android:paddingBottom="@dimen/dp_3">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:gravity="center_horizontal"
                                android:text="@string/home_bonus_tips"
                                android:textColor="@color/white"
                                android:textSize="@dimen/sp_12" />

                            <TextView
                                android:id="@+id/today_bonus_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:gravity="center_horizontal"
                                android:text="0.00元"
                                android:textColor="@color/white"
                                android:textSize="@dimen/sp_14"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:gravity="bottom">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_20"
                        android:layout_gravity="bottom"
                        android:src="@drawable/shape_home_round_back" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="bottom"
                        android:paddingStart="@dimen/dp_6"
                        android:paddingBottom="@dimen/dp_6">

                        <RelativeLayout
                            android:layout_width="115dp"
                            android:layout_height="89dp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginEnd="@dimen/dp_30"
                            android:background="@drawable/main_board_bonus_icon">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tv_total_coin"
                                android:layout_marginStart="@dimen/dp_40"
                                android:orientation="vertical"
                                android:weightSum="3">

                                <TextView
                                    android:id="@+id/tv_total_output"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0/s"
                                    android:textColor="@color/dark_gray"
                                    android:textSize="@dimen/sp_12"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/tv_total_coin"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingStart="@dimen/dp_40"
                                android:paddingTop="@dimen/dp_12"
                                android:text="0"
                                android:textColor="@color/red"
                                android:textSize="@dimen/sp_18"
                                android:textStyle="bold" />
                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:gravity="bottom">

                            <TextView
                                android:id="@+id/one_key_vedio"
                                android:layout_width="@dimen/dp_40"
                                android:layout_height="@dimen/dp_50"
                                android:layout_marginRight="@dimen/dp_18"
                                android:background="@color/blue"
                                android:gravity="center"
                                android:text="一键视频"
                                android:textColor="@color/white"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/one_key_merge"
                                android:layout_width="@dimen/dp_40"
                                android:layout_height="@dimen/dp_50"
                                android:layout_marginRight="@dimen/dp_18"
                                android:background="@color/blue"
                                android:gravity="center"
                                android:text="一键合成"
                                android:textColor="@color/white"
                                android:textStyle="bold" />

                            <FrameLayout
                                android:id="@+id/fl_task_box"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/dp_18">

                                <ImageView
                                    android:id="@+id/iv_task"
                                    android:layout_width="@dimen/dp_46"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/task_box_icon" />

                                <TextView
                                    android:id="@+id/tv_task_unlock"
                                    android:layout_width="@dimen/dp_46"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="bottom|center_horizontal"
                                    android:background="@drawable/task_unlock_shape"
                                    android:gravity="center"
                                    android:paddingTop="@dimen/dp_2"
                                    android:paddingBottom="@dimen/dp_2"
                                    android:textColor="@color/white"
                                    android:textSize="8sp"
                                    android:visibility="invisible" />

                                <ImageView
                                    android:id="@+id/iv_task_red_point"
                                    android:layout_width="@dimen/dp_8"
                                    android:layout_height="@dimen/dp_8"
                                    android:layout_gravity="right"
                                    android:src="@drawable/unread_point_shape"
                                    android:visibility="invisible" />
                            </FrameLayout>


                            <ImageView
                                android:id="@+id/iv_trash"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="-15dp"
                                android:src="@drawable/main_trash_icon" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_adventure_and_build"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="@dimen/home_adventure_top"
                            android:layout_marginEnd="@dimen/dp_10"
                            android:orientation="vertical">

                            <FrameLayout
                                android:id="@+id/fl_veris_icon"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:id="@+id/iv_build"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="@dimen/dp_6" />

                                <TextView
                                    android:id="@+id/tv_build_unlock"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="bottom|center_horizontal"
                                    android:layout_marginTop="@dimen/dp_3"
                                    android:background="@drawable/veris_unlock_back"
                                    android:gravity="center"
                                    android:paddingTop="@dimen/dp_2"
                                    android:paddingBottom="@dimen/dp_2"
                                    android:textColor="@color/white"
                                    android:textSize="8sp"
                                    android:visibility="invisible" />

                                <ImageView
                                    android:id="@+id/iv_build_red_point"
                                    android:layout_width="@dimen/dp_8"
                                    android:layout_height="@dimen/dp_8"
                                    android:layout_gravity="right"
                                    android:src="@drawable/unread_point_shape"
                                    android:visibility="invisible" />
                            </FrameLayout>

                            <FrameLayout
                                android:id="@+id/fl_adventure_icon"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/home_adventure_margin">

                                <ImageView
                                    android:id="@+id/iv_adventure"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="@dimen/dp_6" />

                                <TextView
                                    android:id="@+id/tv_adventure_unlock"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="bottom|center_horizontal"
                                    android:layout_marginTop="@dimen/dp_3"
                                    android:background="@drawable/adventure_unlock_back"
                                    android:gravity="center"
                                    android:paddingTop="@dimen/dp_2"
                                    android:paddingBottom="@dimen/dp_2"
                                    android:textColor="@color/white"
                                    android:textSize="8sp"
                                    android:visibility="invisible" />

                                <ImageView
                                    android:id="@+id/iv_adventure_red_point"
                                    android:layout_width="@dimen/dp_8"
                                    android:layout_height="@dimen/dp_8"
                                    android:layout_gravity="right"
                                    android:src="@drawable/unread_point_shape"
                                    android:visibility="invisible" />
                            </FrameLayout>
                        </LinearLayout>
                    </RelativeLayout>
                </FrameLayout>
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="@dimen/dp_40"
                android:gravity="bottom">

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/animation_view_nan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerInside"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_scale="@dimen/anim_man_ratio" />

                <FrameLayout
                    android:id="@+id/fl_lottie_kitty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:orientation="vertical">

                        <com.airbnb.lottie.LottieAnimationView
                            android:id="@+id/animation_view_cat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/dp_55"
                            android:gravity="center_horizontal"
                            android:scaleType="centerInside"
                            app:lottie_autoPlay="true"
                            app:lottie_loop="true" />

                        <TextView
                            android:id="@+id/tv_dividing_timer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginLeft="@dimen/dp_45"
                            android:layout_marginBottom="@dimen/dp_3"
                            android:background="@drawable/kitty_timer_back"
                            android:drawableLeft="@drawable/kitty_timer_icon"
                            android:drawablePadding="@dimen/dp_4"
                            android:gravity="center"
                            android:paddingLeft="@dimen/dp_5"
                            android:paddingTop="1dp"
                            android:paddingRight="@dimen/dp_5"
                            android:paddingBottom="1dp"
                            android:text="0:00"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_10"
                            android:visibility="invisible" />

                        <TextView
                            android:id="@+id/tv_dividing"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginTop="@dimen/dp_25"
                            android:background="@drawable/dividing_text_back"
                            android:gravity="center"
                            android:paddingLeft="@dimen/dp_5"
                            android:paddingRight="@dimen/dp_2"
                            android:text="分红中0.00元"
                            android:textColor="@color/red"
                            android:textSize="@dimen/sp_10"
                            android:visibility="invisible" />
                    </FrameLayout>


                </FrameLayout>

            </FrameLayout>
        </FrameLayout>

        <TableLayout
            android:id="@+id/gl_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_home_drag_view_back"
            android:stretchColumns="0,1,2,3"
            android:weightSum="3">

            <TableRow
                android:layout_height="0dp"
                android:layout_weight="1">

                <LinearLayout
                    android:id="@+id/ll_first_item"
                    android:layout_width="@dimen/drag_size"
                    android:layout_height="@dimen/drag_size"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_7"
                    android:background="@drawable/shape_home_grid_item_back"
                    android:gravity="right|bottom"
                    tools:ignore="Orientation" />


                <LinearLayout
                    android:layout_width="@dimen/drag_size"
                    android:layout_height="@dimen/drag_size"
                    android:layout_marginStart="@dimen/dp_11"
                    android:layout_marginTop="@dimen/dp_7"
                    android:background="@drawable/shape_home_grid_item_back"
                    android:gravity="right|bottom" />

                <LinearLayout
                    android:layout_width="@dimen/drag_size"
                    android:layout_height="@dimen/drag_size"
                    android:layout_marginStart="@dimen/dp_11"
                    android:layout_marginTop="@dimen/dp_7"
                    android:background="@drawable/shape_home_grid_item_back"
                    android:gravity="right|bottom" />


                <LinearLayout
                    android:layout_width="@dimen/drag_size"
                    android:layout_height="@dimen/drag_size"
                    android:layout_marginStart="@dimen/dp_11"
                    android:layout_marginTop="@dimen/dp_7"
                    android:layout_marginEnd="@dimen/dp_15"
                    android:background="@drawable/shape_home_grid_item_back"
                    android:gravity="right|bottom" />


            </TableRow>


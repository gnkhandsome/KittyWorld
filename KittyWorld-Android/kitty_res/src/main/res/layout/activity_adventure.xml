<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="ResourceName">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <FrameLayout
                    android:id="@+id/fl_top_back"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_50">

                    <HorizontalScrollView
                        android:id="@+id/sv_ground"
                        android:layout_width="1300dp"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/ll_ground_one"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:background="@drawable/adventure_top_back"
                                android:orientation="horizontal" />

                            <LinearLayout
                                android:id="@+id/ll_ground_two"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:background="@drawable/adventure_top_back"
                                android:orientation="horizontal" />

                            <LinearLayout
                                android:id="@+id/ll_ground_three"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:background="@drawable/adventure_top_back"
                                android:orientation="horizontal" />

                        </LinearLayout>

                    </HorizontalScrollView>

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/animation_view_person"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="@dimen/dp_40"
                        android:scaleType="centerInside"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"
                        app:lottie_scale="@dimen/anim_man_ratio" />

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/animation_kitty_one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="85dp"
                        android:layout_marginBottom="@dimen/dp_75"
                        android:scaleType="centerInside"
                        android:visibility="invisible"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"
                        app:lottie_scale="@dimen/anim_man_ratio" />

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/animation_kitty_two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="125dp"
                        android:layout_marginBottom="@dimen/dp_65"
                        android:scaleType="centerInside"
                        android:visibility="invisible"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"
                        app:lottie_scale="@dimen/anim_man_ratio" />

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/animation_kitty_three"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="175dp"
                        android:layout_marginBottom="@dimen/dp_40"
                        android:scaleType="centerInside"
                        android:visibility="invisible"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"
                        app:lottie_scale="@dimen/anim_man_ratio" />

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/animation_kitty_four"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="220dp"
                        android:layout_marginBottom="@dimen/dp_68"
                        android:scaleType="centerInside"
                        android:visibility="invisible"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"
                        app:lottie_scale="@dimen/anim_man_ratio" />

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/animation_kitty_five"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="260dp"
                        android:layout_marginBottom="@dimen/dp_66"
                        android:scaleType="centerInside"
                        android:visibility="invisible"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"
                        app:lottie_scale="@dimen/anim_man_ratio" />


                </FrameLayout>

                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_35"
                    android:src="@drawable/adventure_back_icon" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_60"
                    android:layout_gravity="bottom"
                    android:background="@drawable/adventure_bottom_back" />

                <TextView
                    android:id="@+id/start_adventure"
                    android:layout_width="@dimen/dp_180"
                    android:layout_height="60dp"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginBottom="@dimen/dp_26"
                    android:background="@drawable/adventure_start_btn_back"
                    android:drawableLeft="@drawable/shipincopy"
                    android:drawablePadding="@dimen/dp_10"
                    android:gravity="center"
                    android:paddingLeft="@dimen/dp_30"
                    android:paddingTop="@dimen/dp_18"
                    android:paddingRight="@dimen/dp_30"
                    android:paddingBottom="@dimen/dp_18"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold" />

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:background="@color/color_fff9f9f9"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dp_40">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/adventure_dynamic"
                        android:textColor="@color/dark"
                        android:textSize="@dimen/sp_18"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/tv_adventure_rule"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="@string/rule"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/sp_14" />
                </RelativeLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dp_15"
                    android:background="@drawable/travel_content_board">

                    <LinearLayout
                        android:id="@+id/ll_adventure_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="invisible">

                        <RelativeLayout
                            android:id="@+id/rl_adventure_event"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/dp_12"
                            android:paddingTop="@dimen/dp_18"
                            android:paddingRight="@dimen/dp_9">

                            <ImageView
                                android:id="@+id/iv_dynamic_icon_one"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/adventure_house" />

                            <TextView
                                android:id="@+id/tv_dynamic_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_17"
                                android:layout_toRightOf="@+id/iv_dynamic_icon_one"
                                android:text="@string/adventure_team"
                                android:textColor="@color/dark"
                                android:textSize="@dimen/sp_14"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_dynamic_content"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_10"
                                android:layout_marginRight="@dimen/dp_10"
                                android:layout_toLeftOf="@+id/tv_dynamic_time"
                                android:layout_toRightOf="@+id/tv_dynamic_title"
                                android:ellipsize="end"
                                android:gravity="left"
                                android:maxLines="2"
                                android:textColor="@color/dark_gray"
                                android:textSize="@dimen/sp_14" />

                            <TextView
                                android:id="@+id/tv_dynamic_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:textColor="@color/color_FF9B9B9B"
                                android:textSize="@dimen/dp_12" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rl_adventure_event_two"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/dp_12"
                            android:paddingTop="@dimen/dp_25"
                            android:paddingRight="@dimen/dp_9">

                            <ImageView
                                android:id="@+id/iv_dynamic_icon_two"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/adventure_coin_icon" />

                            <TextView
                                android:id="@+id/tv_dynamic_title_two"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_17"
                                android:layout_toRightOf="@+id/iv_dynamic_icon_two"
                                android:text="@string/adventure_team"
                                android:textColor="@color/dark"
                                android:textSize="@dimen/sp_14"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_dynamic_content_two"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_10"
                                android:layout_marginRight="@dimen/dp_10"
                                android:layout_toLeftOf="@+id/tv_dynamic_time_two"
                                android:layout_toRightOf="@+id/tv_dynamic_title_two"
                                android:ellipsize="end"
                                android:gravity="left"
                                android:maxLines="2"
                                android:textColor="@color/dark_gray"
                                android:textSize="@dimen/sp_14" />

                            <TextView
                                android:id="@+id/tv_dynamic_time_two"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:textColor="@color/color_FF9B9B9B"
                                android:textSize="@dimen/dp_12" />

                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_1"
                            android:layout_marginLeft="@dimen/dp_12"
                            android:layout_marginTop="@dimen/dp_20"
                            android:layout_marginRight="@dimen/dp_11"
                            android:background="@color/color_FFDCDCDC" />

                        <TextView
                            android:id="@+id/check_more_dynamic"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_14"
                            android:layout_marginBottom="@dimen/dp_15"
                            android:gravity="center_horizontal"
                            android:text="@string/check_more_dynimci"
                            android:textColor="@color/dark_gray"
                            android:textSize="@dimen/sp_14" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_empty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/no_adventure_info"
                        android:textColor="@color/color_9B9B9B"
                        android:textSize="@dimen/sp_15"
                        android:visibility="visible" />
                </FrameLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/adventure_gain"
                        android:textColor="@color/dark"
                        android:textSize="@dimen/sp_18"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/adventure_may_gain"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="@string/adventure_may_gain"
                        android:textColor="@color/color_FF47CA9A"
                        android:textSize="@dimen/sp_14" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:background="@drawable/travel_content_board"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/dp_12"
                    android:paddingBottom="@dimen/dp_12">

                    <com.kitty.kitty_base.views.CustomGridView
                        android:id="@+id/gv_adventure_gain"
                        style="@style/list_view_in_common"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:numColumns="6"
                        android:paddingLeft="@dimen/dp_12"
                        android:stretchMode="columnWidth"
                        android:verticalSpacing="@dimen/dp_12" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/my_pat"
                        android:textColor="@color/dark"
                        android:textSize="@dimen/sp_18"
                        android:textStyle="bold" />

                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dp_15"
                    android:background="@drawable/travel_content_board"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/dp_12"
                    android:paddingBottom="@dimen/dp_12">

                    <com.kitty.kitty_base.views.CustomGridView
                        android:id="@+id/gv_my_pet"
                        style="@style/list_view_in_common"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_12"
                        android:layout_marginBottom="@dimen/dp_12"
                        android:numColumns="5"
                        android:stretchMode="columnWidth"
                        android:verticalSpacing="@dimen/dp_12" />

                    <TextView
                        android:id="@+id/pet_stamina"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|bottom"
                        android:layout_marginRight="@dimen/dp_12"
                        android:background="@drawable/adventure_dianchi_back"
                        android:drawableLeft="@drawable/dianchi"
                        android:drawablePadding="@dimen/dp_2"
                        android:paddingLeft="@dimen/dp_5"
                        android:paddingTop="@dimen/dp_6"
                        android:paddingRight="@dimen/dp_5"
                        android:paddingBottom="@dimen/dp_6"
                        android:text="总体力值：0"
                        android:textColor="@color/dark"
                        android:textSize="@dimen/sp_12" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/tv_remain_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/dp_78"
        android:background="@drawable/adventure_remain_time_bak"
        android:drawableLeft="@drawable/adventure_poin_icon"
        android:drawablePadding="@dimen/dp_6"
        android:gravity="center_vertical"
        android:paddingRight="@dimen/dp_10"
        android:text="@string/remain_time"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_13" />
</RelativeLayout>